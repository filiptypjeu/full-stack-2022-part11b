    "lint": "npx eslint backend/src frontend/src",
    "lint-fix": "npx eslint backend/src frontend/src --fix",
    "start": "node backend/src/index.js",
    "test": "jest */tests/*.test.js",
    "test:e2e": "cypress run"
  },
